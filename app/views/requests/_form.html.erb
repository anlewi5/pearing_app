<div class="form">
  <%= form_for [@user, @request] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :date %>
  <%= f.date_field :day %>
  <br />
  <%= f.label :start_time %>
  <%= f.datetime_local_field :start_time %>
  <br />
  <%= f.label :duration %>
  <%= f.text_field :duration %>
  <br />
  <%= f.label :location %>
  <%= f.text_field :location %>
  <br />
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br />
  <%= f.submit %>

  <% end %>
</div>
