<h1> <%= current_user.first_name %>'s Offers </h1>

<div class="offer-container container-fluid">
  <% @offers.each do |offer| %>
  <div class="panel panel-default" class=offer_<%= offer.id %>>
    <div class="panel-heading">
      <h3 class="panel-title">
        <stong><%= offer.request.title %></strong>
        <%= link_to "More Info", view_request_path(offer.request) %>
      </h3>
    </div>
    <div class="panel-body">
      <h3> Offer Status: <%= offer.status_of_offer %> </h3>
      <%= button_to "Delete Offer", user_offer_path(offer.user, offer), method: "delete", class: 'btn btn-large btn-danger' %>
    </div>
  </div>
  <% end %>
</div>
