<h1> You Have Offered To Help With These Requests: </h1>

<div class="offer-container container-fluid">
  <% @offers.each do |offer| %>
  <div class="panel panel-default" class=offer_<%= offer.id %>>
    <div class="panel-heading">
      <h3 class="panel-title">
        <h2><%= offer.request.title %></h2><br>
        <%= link_to "More Info", view_request_path(offer.request), class: 'btn btn-large btn-info'%>
      </h3>
    </div>
    <div class="panel-body">
      <h3> Offer Status: <%= offer.status_of_offer %> </h3><br>
      <%= button_to "Delete Offer", user_offer_path(offer.user, offer), method: "delete", class: 'btn btn-large btn-danger' %>
    </div>
  </div>
  <% end %>
</div>
